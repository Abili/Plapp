<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_profie_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/camera_changepic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profileimage_24dp"

            />
    </android.support.v7.widget.CardView>



<android.support.v7.widget.CardView
        android:id="@+id/username_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_profie_settings"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_settings_onClick"
            android:padding="15dp"
            android:text="username" />

        <ImageView
            android:id="@+id/edit_uername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:src="@drawable/edit" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/about_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_card"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/profile_settings_onClick"
            android:padding="15dp"
            android:text="About Me" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/optionsbtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/about_card"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:visibility="gone">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="cancel"
            android:textColor="#ffff8800" />

        <Button
            android:id="@+id/save_changesBtn"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#fff"
            android:text="save changes"
            android:textColor="#ffff8800" />
    </android.support.v7.widget.CardView>


</RelativeLayout>