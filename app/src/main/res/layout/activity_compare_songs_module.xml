<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compareSongs.CompareSongs">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <RelativeLayout
            android:id="@+id/compareRelativeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/compareSonglayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/comparesong_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="songname" />

                        <TextView
                            android:id="@+id/compareArtistname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comparesong_name"
                            android:text="Artistname" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/compareSongSelcetion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_done_black_24dp" />

                    <TextView
                        android:id="@+id/compareVoteCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="2dp"
                        android:text="00" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/compareSonglayout1"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp">

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/comparesong_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="songname2" />

                        <TextView
                            android:id="@+id/compareArtistname2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/comparesong_name"
                            android:text="Artist name" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/compareSongSelcetion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/ic_done_black_24dp" />

                    <TextView
                        android:id="@+id/compareVoteCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="2dp"
                        android:text="00" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_below="@+id/compareRelativeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:id="@+id/fabaddsong_toCompare"
            android:backgroundTint="#fff"
            android:layout_alignParentRight="true"

            />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/postTiming"
                android:text="set post time"
                android:layout_alignBottom="@+id/fabaddsong_toCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
</RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>